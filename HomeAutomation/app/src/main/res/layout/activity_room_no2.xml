<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.homeautomation.RoomNo2"
    android:background="@drawable/rooms">

    <Switch
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT NO 1"
        android:id="@+id/switch1"
        android:layout_marginTop="66dp"
        android:checked="false"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:textStyle="italic"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room No 2"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Switch
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAN NO 1"
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/status2"
        android:layout_below="@+id/statusfan2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/statusoflights"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/back2"
        android:background="@drawable/backtolocation"
        android:layout_below="@+id/status2"
        android:layout_alignLeft="@+id/status2"
        android:layout_alignStart="@+id/status2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/statusfan2"
        android:background="@drawable/statusoffan"
        android:layout_marginTop="98dp"
        android:layout_below="@+id/switch2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
